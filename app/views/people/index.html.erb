<h1>People</h1>

<table class="ui celled table">
  <thead>
    <tr><th>Name</th>
    <th>Age</th>
    <th>Job</th>
  </tr></thead>
  <tbody>
    <% @people.each do |person| %>

    <tr>
      <td data-label="Name"><%= person.first_name %></td>
      <td data-label="Name"><%= person.last_name %></td>
      <td data-label="Name"><%= person.phone %></td>
      <td data-label="Name"><%= person.avatar %></td>
      <td data-label="Name"><%= person.email %></td>
      <td data-label="Age">24</td>
      <td data-label="Job">Engineer</td>
    </tr>
    <tr>
      <td data-label="Name">Jill</td>
      <td data-label="Age">26</td>
      <td data-label="Job">Engineer</td>
    </tr>
    <tr>
      <td data-label="Name">Elyse</td>
      <td data-label="Age">24</td>
      <td data-label="Job">Designer</td>
    </tr>
  </tbody>
</table>